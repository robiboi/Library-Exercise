@model Library.Models.BookModel

@{
    ViewData["Title"] = "Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {

            $.ajax({
                 type: "GET",
                 url: "@Url.Action("BookList", "Home")",
                 success: function (data) {
                    $("#BookDetail").html(data);
                 }
            });

            $("#CreateBtn").click(function () {
                $('#CreateBookModal').modal('show');
            });

            

            $("#SubmitBtn").click(function (e) {
                e.preventDefault();

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Book", "Home")",
                    data: $("#BookForm").serialize(),
                    success: function (data) {
                        $("#CreateBookModal").modal('hide');
                        $("#BookDetail").html(data);
                        $("#bookName").val('');
                        $("#author").val('');
                        

                    }
                });
            });
        });
    </script>
}

<h2>Book</h2>
<h4>BookModel</h4>
<hr />

<button class="btn btn-primary" id="CreateBtn">Create Book!</button>
<hr />
<div class="modal" id="CreateBookModal" tabindex="-1" hidden>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Book Form</h5>
            </div>
            <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Book" id="BookForm">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="BookName" class="control-label"></label>
                                    <input asp-for="BookName" id="bookName" class="form-control" />
                                    <span asp-validation-for="BookName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Author" class="control-label"></label>
                                    <input asp-for="Author" id="author" class="form-control" />
                                    <span asp-validation-for="Author" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PublishedDate" class="control-label"></label>
                                    <input asp-for="PublishedDate" id="PublishedDate" class="form-control" />
                                    <span asp-validation-for="PublishedDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" id="SubmitBtn" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
<div class="container" id="BookDetail"></div>





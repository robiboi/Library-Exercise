@model WebApplication2.Models.BookModel

@{
    ViewData["Title"] = "Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#DisplayList").click(function (e) {
                e.preventDefault();
                //.. 

                $.ajax({
                    type: "GET",
                    url: "@Url.Action("BookList", "Home")",
                    success: function (data) {
                        $("#BookDetail").html(data);
                    }
                });
            });

            $("#SubmitBtn").click(function () {
                e.preventDefault();

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Book", "Home")",
                    data: $("#BookForm").serialize()
                });
            });
        });
    </script>
}

<h2>Book</h2>

<h4>BookModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Book" id="BookForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookName" class="control-label"></label>
                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="SubmitBtn" class="btn btn-default" />
            </div>
        </form>
        <button id="DisplayList">Display List</button>
    </div>
    <div class="col-md-4" id="BookDetail">
        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


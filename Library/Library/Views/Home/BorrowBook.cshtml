@model Library.Models.BorrowedBookModel

@{
    ViewData["Title"] = "BorrowBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <form asp-action="BorrowBook">

        <div hidden>
            @Html.EditorFor(e => e.Book)
        </div>
        <partial name="BookDetails" model="Model.Book" />

        @Html.EditorFor(e => e.Borrower)
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>
    
</div>

<div>
    <a asp-action="Book">Back to List</a>
</div>
